package br.com.meu.italo.model;

import java.util.Scanner;

public class Exercicios {
	Scanner ler = new Scanner(System.in);
	
	//perimetro
	private double raio;
	private double perimetro;
	
	//idade
	private double idade; 
	
	//retangulo
	private double retanguloBase;
    private double retanguloaltura;
    
    //triangulo
    private double trianguloBase;
    private double trianguloAltura;
	
	
	
	//public void teste() {
	//	double valor = ler.nextDouble();
	//	this.raio += valor;
	//}
	
	//public double getRaio() {
	//	return this.raio;
	//}
	
		public void valorRaio() {
		System.out.print("Digite o valor do Raio: ");
		double valor = ler.nextDouble();
		if (valor > 0) {
			raio += valor;
		} else {
			System.out.println("Valor inválido");
		}
		
	}
	
	public double getRaio() {
		return raio;
	}
	
	public void cauculoPerimetro() {
		double valorPerimetro = 2*3.14*raio;
		
		perimetro += valorPerimetro;
	}
	
	public void mostrarResultado() {
		System.out.println("Seu resultado é: " + perimetro);
	}
	
	//*************************************************************
	
	public void idade() {
		System.out.print("Digite sua idade: ");
		double valorIdade = ler.nextDouble();
		idade += valorIdade;
		
	
	}
	
	public void calcularIdade() {

		if (idade > 0) {
			double segundos = idade*365*24*60*60;
			System.out.println("Sua idade em segundos :" + segundos);	
		} else {
			System.out.println("Idade inválida!!");
		}
	}

	//*************************************************************
	
	public void medidasRetangulo(){
		System.out.print("Digite a altura do rentangulo: ");
		double valorAltura = ler.nextDouble();
		retanguloaltura += valorAltura;
		
		System.out.print("Digite a base do retangulo: ");
		double valorBase = ler.nextDouble();
		retanguloBase += valorBase;
	}
	
	public void calculoRetangulo() {
		double area = retanguloBase*trianguloAltura;
	    System.out.println("Área :" + area);
	}
	
	//*************************************************************
	
	public void medidasTriangulo() {
		System.out.println("Digite a altura do triangulo: ");
		double valorTriangulo = ler.nextDouble();
		trianguloAltura += valorTriangulo;
		
		System.out.println("Digite a base do triangulo: ");
		double valorBase = ler.nextDouble();
		trianguloBase += valorBase;
	}
	
	public void calculoTriangulo() {
		double area = trianguloBase*trianguloAltura/2;
	    System.out.println("Área :" + area);
	  }
	}
	
}
